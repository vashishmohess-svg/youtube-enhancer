<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">
    <TextView android:id="@+id/txt_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tap to toggle tint"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tint intensity"/>
    <SeekBar android:id="@+id/seek_tint" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cinematic strength"/>
    <SeekBar android:id="@+id/seek_vignette" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100"/>
</LinearLayout>
